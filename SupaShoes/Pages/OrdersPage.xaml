<Page x:Class="SupaShoes.Pages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SupaShoes.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Заказы">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190*"/>
            <ColumnDefinition Width="350*"/>
            <ColumnDefinition Width="120*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtName" Grid.Row="0" Grid.Column="2"/>

        <ListView Name="LViewOrders" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="1" Margin="5, 5, 5, 5" d:ItemsSource="{d:SampleData ItemCount=1}" MouseDoubleClick="LViewOrders_MouseDoubleClick">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Background="{Binding Background}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="250"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="5">
                                <TextBlock Text="{Binding id, StringFormat='Заказ №\{0}'}" FontSize="16"/>
                                <TextBlock Text="{Binding OrderStatuses.name, StringFormat='Статус: \{0}'}"/>
                                <TextBlock Text="{Binding PickapPoints.adress, StringFormat='Адрес: \{0}'}"/>

                                <TextBlock Text="{Binding order_date, StringFormat='Дата: \{0}'}"/>

                            </StackPanel>

                            <TextBlock Grid.Column="2" Text="{Binding delivery_date, StringFormat='Дата доставки: \{0}'}" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button x:Name="btnAdd" Content="Добавить" Grid.Column="2" Grid.Row="2" Click="btnAdd_Click" Visibility="Hidden"/>
    </Grid>
</Page>
