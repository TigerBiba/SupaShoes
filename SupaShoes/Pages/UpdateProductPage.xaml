<Page x:Class="SupaShoes.Pages.UpdateProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SupaShoes.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Редактирование продукта">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="270"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Top">
            <Image x:Name="img" Width="150" Height="150"/>
            <Button x:Name="btnEnterImage" Content="Выбрать фото" Click="btnEnterImage_Click"/>
        </StackPanel>
        
        <StackPanel Orientation="Vertical" Grid.Column="1">
            <TextBlock Text="Редактирование" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Наименование" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbName" Width="140" Height="25"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Цена" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbPrice" Width="140" Height="25"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Поставщик" HorizontalAlignment="Center"/>
                <ComboBox x:Name="cmbSupplier" Margin="5">
                    <ComboBoxItem Content="Kari"/>
                    <ComboBoxItem Content="Обувь для вас"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Производитель" HorizontalAlignment="Center"/>
                <ComboBox x:Name="cmbManufacturer" Margin="5">
                    <ComboBoxItem Content="Kari"/>
                    <ComboBoxItem Content="Обувь для вас"/>
                    <ComboBoxItem Content="Marco Tozzi"/>
                    <ComboBoxItem Content="Рос"/>
                    <ComboBoxItem Content="Rieker"/>
                    <ComboBoxItem Content="Alessio Nesca"/>
                    <ComboBoxItem Content="CROSBY"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Категория" HorizontalAlignment="Center"/>
                <ComboBox x:Name="cmbCategory" Margin="5">
                    <ComboBoxItem Content="Женская обувь"/>
                    <ComboBoxItem Content="Мужская обувь"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Скидка" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbDiscount" Width="140" Height="25"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="На складе" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbCount" Width="140" Height="25"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Описание" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbDescription" Width="140" Height="25"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click"/>
                <Button x:Name="btnDelete" Content="Удалить" Click="btnDelete_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
