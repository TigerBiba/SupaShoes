<Page x:Class="SupaShoes.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SupaShoes.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Продукты">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190*"/>
            <ColumnDefinition Width="350*"/>
            <ColumnDefinition Width="120*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtUser" Grid.Row="0" Grid.Column="3"/>
        <ComboBox Name="cmbFilter" Grid.Column="0" Grid.Row="1" SelectionChanged="cmbFilter_SelectionChanged" Margin="5" Visibility="Hidden">
            <ComboBoxItem Content="Все поставщики"/>
            <ComboBoxItem Content="Kari"/>
            <ComboBoxItem Content="Обувь для вас"/>
            <ComboBoxItem Content="Marco Tozzi"/>
            <ComboBoxItem Content="Рос"/>
            <ComboBoxItem Content="Rieker"/>
            <ComboBoxItem Content="Alessio Nesca"/>
            <ComboBoxItem Content="CROSBY"/>
        </ComboBox>

        <TextBox x:Name="tbSearchg" Grid.Row="1" Grid.Column="1" Margin="5" SelectionChanged="tbSearch_SelectionChanged" Visibility="Hidden"/>

        <ComboBox Name="cmbSort" Grid.Column="2" Grid.Row="1" SelectionChanged="cmbSort_SelectionChanged" Margin="5" Visibility="Hidden">
            <ComboBoxItem Content="Без сортировки"/>
            <ComboBoxItem Content="Сначала меньше на складе"/>
            <ComboBoxItem Content="Сначала больше на складе"/>
        </ComboBox>

        <ListView Name="LViewProduct" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="2" Margin="5, 5, 5, 5" d:ItemsSource="{d:SampleData ItemCount=1}" SelectionChanged="LViewProduct_SelectionChanged"  MouseDoubleClick="LViewProduct_MouseDoubleClick">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Background="{Binding Background}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="{Binding ImgPath}" Width="200" Height="130"/>

                            <StackPanel Grid.Column="1" Margin="5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ProductCategories.name}" FontSize="16"/>
                                    <TextBlock Text="{Binding name, StringFormat=' | \{0}'}" FontSize="16"/>
                                </StackPanel>

                                <TextBlock Text="{Binding description}"/>
                                <TextBlock Text="{Binding Partners1.title, StringFormat='Производитель: \{0}'}"/>
                                
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding costLineThrough}" Foreground="Red"/>
                                    <TextBlock Text="{Binding costWithDiscount}"/>
                                </StackPanel>
                                
                                <TextBlock Text="{Binding Units.name, StringFormat='Единица измерения: \{0}'}"/>
                                <TextBlock Text="{Binding count, StringFormat='Количество на складе: \{0}'}"/>
                                
                            </StackPanel>

                            <TextBlock Grid.Column="2" Text="{Binding discount, StringFormat='\{0}%'}" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button x:Name="btnOrders" Content="Заказы" Grid.Column="0" Grid.Row="3" Click="btnOrders_Click" Visibility="Hidden"/>
        <Button x:Name="btnAdd" Content="Добавить" Grid.Column="2" Grid.Row="3" Click="btnAdd_Click" Visibility="Hidden"/>
    </Grid>
</Page>
