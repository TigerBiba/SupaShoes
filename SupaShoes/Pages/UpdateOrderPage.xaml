<Page x:Class="SupaShoes.Pages.UpdateOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SupaShoes.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Редактирование заказа">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="245"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="245"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="1">
            <TextBlock Text="Редактирование заказа" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Пользователь" HorizontalAlignment="Center"/>
                <ComboBox x:Name="cmbUser" Width="140" Height="25" Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Пункт выдачи" HorizontalAlignment="Center"/>
                <ComboBox x:Name="cmbPickap" Width="140" Height="25" Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Дата заказа" HorizontalAlignment="Center"/>
                <DatePicker x:Name="dpOrder"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Дата выдачи" HorizontalAlignment="Center"/>
                <DatePicker x:Name="dpDelivery"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Статус заказа" HorizontalAlignment="Center"/>
                <ComboBox x:Name="cmbStatus" Width="140" Height="25" Margin="5">
                    <ComboBoxItem Content="Завершён"/>
                    <ComboBoxItem Content="Новый"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click"/>
                <Button x:Name="btnDelete" Content="Удалить" Click="btnDelete_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
